<UserControl x:Class="ARK.Administrationssystem.Pages.Indstillinger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:VM="clr-namespace:ARK.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <VM:SettingsViewModel />
    </UserControl.DataContext>
    <Grid >
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="White" Offset="0.118"/>
                <GradientStop Color="White" Offset="1"/>
                <GradientStop Color="#FFF9F7F7" Offset="0.056"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <WrapPanel Margin="5,0,0,0" Grid.Row="0">
                <Image Source="/images/setting_tools.png" Height="32"/>
                <Label FontSize="28" Margin="0">INDSTILLINGER</Label>
            </WrapPanel>
            <TabControl Margin="0,0,0,0" Background="#CCCCCC" Grid.Row="1">
                <TabItem Header="Generelt" FontSize="20" Margin="5,0,5,0" Padding="10,0,30,0">
                    <ScrollViewer PanningMode="VerticalOnly" Padding="0,0,0,0" BorderThickness="1" BorderBrush="Black">
                        <Grid Background="Transparent" />
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Skadetyper" FontSize="20" Margin="0,0,5,0" Padding="10,0,30,0">
                    <ScrollViewer PanningMode="VerticalOnly" Padding="0,0,0,0" BorderThickness="1" BorderBrush="Black">
                        <Grid Background="White" />
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Administratorer" FontSize="20" Margin="5,0,5,0" Padding="10,0,30,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="14*"/>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="167*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="197*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Row="0" Grid.Column="0">Opret Administrator</Button>
                        <Label Grid.Row="0" Grid.Column="2">Detaljer</Label>
                        <ScrollViewer Grid.Row="2" Grid.Column="0">
                            <ListView>

                            </ListView>
                        </ScrollViewer>
                        <DockPanel Grid.Row="2" Grid.Column="2" Background="White">
                            <StackPanel DockPanel.Dock="Top">
                                <WrapPanel Margin="25">
                                    <StackPanel Margin="0,0,40,0">
                                        <Label>Brugernavn:</Label>
                                        <Label>Kodeord:</Label>
                                        <Label>Fornavn:</Label>
                                        <Label>Efternavn:</Label>
                                        <Label>E-mail:</Label>
                                        <Label>Telefon:</Label>
                                    </StackPanel>
                                    <StackPanel Width="250">
                                        <TextBox Margin="0,4.5,0,0">Herring</TextBox>
                                        <PasswordBox Margin="0,4.5,0,0" Password="Kode1234"></PasswordBox>
                                        <TextBox Margin="0,4.5,0,0">Henning</TextBox>
                                        <TextBox Margin="0,4.5,0,0">Jensen</TextBox>
                                        <TextBox Margin="0,4.5,0,0" >Supernova@hotmail.com</TextBox>
                                        <TextBox Margin="0,4.5,0,0">12345678</TextBox>
                                    </StackPanel>
                                </WrapPanel>
                            </StackPanel>
                            <WrapPanel DockPanel.Dock="Bottom">
                                <Button>Ok</Button>
                                <Button>Anullér</Button>
                                <Button>Slet!</Button>
                            </WrapPanel>
                        </DockPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</UserControl>

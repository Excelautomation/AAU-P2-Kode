<UserControl x:Class="ARK.Administrationssystem.Pages.Indstillinger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:VM="clr-namespace:ARK.ViewModel"
             xmlns:administrationssystem="clr-namespace:ARK.ViewModel.Administrationssystem"
             mc:Ignorable="d" 
             d:DesignHeight="605.97" d:DesignWidth="941.791">
    <UserControl.DataContext>
        <administrationssystem:SettingsViewModel />
    </UserControl.DataContext>
    <Grid >
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="White" Offset="0.118"/>
                <GradientStop Color="White" Offset="1"/>
                <GradientStop Color="#FFF9F7F7" Offset="0.056"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <WrapPanel Margin="5,0,0,0" Grid.Row="0">
                <Image Source="/images/setting_tools.png" Height="32"/>
                <Label FontSize="28" Margin="0">INDSTILLINGER</Label>
            </WrapPanel>
            <TabControl Margin="0,0,0,0" Background="Transparent" Grid.Row="1">
                <TabItem Header="SMS-Modul" FontSize="20" Margin="5,0,5,0" Padding="10,0,30,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="33*"/>
                            <RowDefinition Height="121*"/>
                            <RowDefinition Height="39*"/>
                            <RowDefinition Height="325*"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0">Generelt</Label>
                        <Border Grid.Row="1" CornerRadius="15" Background="#EEEEEE" Padding="10" Margin="10,0,10,10">
                            <StackPanel>
                                <DockPanel>
                                    <TextBlock Margin="0,0,3,0" Background="Transparent">I dag forventes mørkets frembrud klokken:</TextBlock>
                                    <TextBox Margin="0,0,3,0" Width="34" Background="White">22</TextBox>
                                    <TextBlock Margin="0,0,3,0">:</TextBlock>
                                    <TextBox Margin="0,0,3,0" Width="34" Background="White">58</TextBox>
                                    <CheckBox HorizontalAlignment="Right" Width="230">Automatisk opdatering.</CheckBox>
                                </DockPanel>
                                <DockPanel>
                                    <TextBlock Background="Transparent">Send mørke-besked til udrejste både</TextBlock>
                                    <ComboBox>Tissemand</ComboBox>
                                    <TextBlock Background="Transparent">minutter efter mørkets frembrud.</TextBlock>
                                </DockPanel>
                                <DockPanel>
                                    <TextBlock Background="Transparent">En båds reaktion på en mørke-besked skal ske indenfor</TextBlock>
                                    <ComboBox>Tissekone</ComboBox>
                                    <TextBlock Background="Transparent">minutter.</TextBlock>
                                </DockPanel>
                            </StackPanel>
                        </Border>
                        <Label Margin="10,0,0,0" Grid.Row="2">Kontaktpersoner</Label>
                        <Border Grid.Row="3" CornerRadius="15" Background="#EEEEEE" Padding="10" Margin="10,0,10,10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="9*"/>
                                    <RowDefinition/>
                                    <RowDefinition Height="75*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="207*"/>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="25*"/>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="228*"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Row="0" Grid.Column="0">Aktive kontaktpersoner</Label>
                                <Label Grid.Row="0" Grid.Column="4">Ikke-aktive kontakpersoner</Label>
                                <StackPanel Grid.Row="2" Grid.Column="2">
                                    <WrapPanel VerticalAlignment="Center">
                                        <Button>((---</Button>
                                        <Button>---))</Button>
                                    </WrapPanel>
                                </StackPanel>
                                <ScrollViewer Grid.Row="2" Grid.Column="0">
                                    <ListView></ListView>
                                </ScrollViewer>
                                <ScrollViewer Grid.Row="2" Grid.Column="4">
                                    <ListView></ListView>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>
                <TabItem Header="Skadetyper" FontSize="20" Margin="0,0,5,0" Padding="10,0,30,0">
                    <ScrollViewer PanningMode="VerticalOnly" Padding="0,0,0,0" BorderThickness="1" BorderBrush="Black">
                        <Grid Background="White" />
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Administratorer" FontSize="20" Margin="5,0,5,0" Padding="10,0,30,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="14*"/>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="167*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="197*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Row="0" Grid.Column="0">Opret Administrator</Button>
                        <Label Grid.Row="0" Grid.Column="2">Detaljer</Label>
                        <ScrollViewer Grid.Row="2" Grid.Column="0">
                            <ListView Name="KontaktListe" SelectionMode="Single">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Width="500">
                                            <StackPanel Margin="0,10,0,10">
                                                <Label Content="{Binding Path=Brugernavn}" Margin="0,0,0,0" Padding="0"/>
                                                <WrapPanel>
                                                    <Label Content="{Binding Path=Member.FirstName}" Margin="0,0,3,0" Padding="0"/>
                                                    <Label Content="{Binding Path=Member.LastName}" Margin="0,0,0,0" Padding="0"/>
                                                </WrapPanel>
                                            </StackPanel>
                                            <Separator Margin="0" Padding="0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </ScrollViewer>
                        <DockPanel Grid.Row="2" Grid.Column="2" Background="White">
                            <StackPanel DockPanel.Dock="Top">
                                <WrapPanel Margin="25">
                                    <StackPanel Margin="0,0,40,0">
                                        <Label>Brugernavn:</Label>
                                        <Label>Kodeord:</Label>
                                        <Label>Fornavn:</Label>
                                        <Label>Efternavn:</Label>
                                        <Label>E-mail:</Label>
                                        <Label>Telefon:</Label>
                                    </StackPanel>
                                    <StackPanel Width="250">
                                        <TextBox Margin="0,4.5,0,0">FFS</TextBox>
                                        <PasswordBox Margin="0,4.5,0,0" Password="Kode1234"></PasswordBox>
                                        <TextBox Margin="0,4.5,0,0">Bobby</TextBox>
                                        <TextBox Margin="0,4.5,0,0">Olsen</TextBox>
                                        <TextBox Margin="0,4.5,0,0" >Supernova@hotmail.com</TextBox>
                                        <TextBox Margin="0,4.5,0,0">12345678</TextBox>
                                    </StackPanel>
                                </WrapPanel>
                            </StackPanel>
                            <WrapPanel DockPanel.Dock="Bottom" Margin="25">
                                <Button>Gem</Button>
                                <Button Margin="10,0,0,0">Anullér</Button>
                                <Button Margin="250,0,0,0">Slet!</Button>
                            </WrapPanel>
                        </DockPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</UserControl>

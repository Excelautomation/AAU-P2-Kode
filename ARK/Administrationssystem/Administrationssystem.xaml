            <!--<TextBox x:Name="txtMenuSearch" BorderThickness="0" Foreground="White" Padding="20,0,20,0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalAlignment="Center" FontSize="15" Width="155.373" Height="40" VerticalContentAlignment="Center" TextWrapping="WrapWithOverflow">
                <TextBox.Background>
                    <ImageBrush ImageSource="/images/Søgebar.png"/>
                </TextBox.Background> Søg her...
            </TextBox> -->
        </WrapPanel>

        <Grid Height="100" Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Right" Width="165">

            <TextBlock Margin="0,-40,5,0" Height="40" FontSize="20" FontFamily="Arial"><Run Text="Jon Doge Larsen" FontFamily="Arial"/></TextBlock>
            <TextBlock Margin="0,5,5,0" Height="40" FontSize="16" FontFamily="Arial"><Run Text="Formand" FontFamily="Arial"/></TextBlock>
            <Button x:Name="btnMenuLogout" Content="    Logud    " FontSize="14" Foreground="White" HorizontalContentAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Top" Width="95" Margin="50,70,20,0" FontFamily="Arial">
                <Button.Background>
                    <ImageBrush ImageSource="/images/logud.png"/>
                </Button.Background>
            </Button>
            <Image x:Name="imgMenuBrugerBillede" Margin="-105,5,0,0" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Source="https://scontent-a-fra.xx.fbcdn.net/hphotos-prn2/t1.0-9/1530506_355629557911254_1987273982_n.jpg"/>
        </Grid>
        <Border Grid.Column="0" Grid.Row="2"  Background="#e2e9f0" BorderBrush="Gray" BorderThickness="2">
            <StackPanel>
                <Border Visibility="{Binding Path=ShowSearch}" BorderThickness="1" CornerRadius="5" BorderBrush="Black" Margin="5,5,5,5" Height="68">
                    <StackPanel Margin="0,0,0,0">
                        <Label Margin="0,0,0,-10" FontSize="18">Søgning</Label>
                        <Rectangle Margin="5,5,5,-5" Height="1" Fill="Gray"/>
                        <TextBox x:Name="txtMenuSearchleft" Text="Søg her..." BorderThickness="1" Padding="5,0,20,0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"  VerticalAlignment="Bottom" FontSize="15" Height="25" VerticalContentAlignment="Center" TextWrapping="WrapWithOverflow" Margin="5,10,5,5">
                        </TextBox>
                    </StackPanel>
                </Border>
                <Border Visibility="{Binding Path=ShowFilter}" BorderThickness="1" CornerRadius="5" BorderBrush="Black" Margin="5,5,5,5">
                    <StackPanel HorizontalAlignment="Stretch" Margin="0,0,0,0" DockPanel.Dock="Left" VerticalAlignment="Top">
                        <!-- <Administrationssystem:Header Title="Filter" DockPanel.Dock="Top" Height="32px"/> -->
                        <Label FontSize="18">Filter</Label>

                        <Rectangle Margin="5,-10,5,0" Height="1" Fill="Gray"/>
                        <StackPanel x:Name="Stackpanelfilter" Margin="5,0,5,5">
                            <ItemsControl ItemsSource="{Binding Path=CurrentFilter}" />
                        </StackPanel>
                        <!-- <StackPanel x:Name="Filters" DockPanel.Dock="Top" ScrollViewer.VerticalScrollBarVisibility="Auto"/> -->
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
        <GridSplitter HorizontalAlignment="Right" 
			VerticalAlignment="Stretch" 
			Grid.Column="1" Grid.Row="2" ResizeBehavior="PreviousAndNext"
			Width="5" Background="#FFBCBCBC"/>

        <Grid x:Name="MainContent" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="1" Margin="10,0,0,0" Background="white">
            <ContentControl Content="{Binding Path=CurrentPage}"/>
        </Grid>


        <Grid Grid.Row="3" Grid.ColumnSpan="3" Background="#0a2f6c">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" HorizontalAlignment="Center" FontFamily="Arial" Foreground="White" FontSize="16" Margin="0,8,0,0"><Run Text="Aalborg Roklub | +45 98 12 67 19 | Søsportsvej 9, 9000 Aalborg"/></TextBlock>
        </Grid>
    </Grid>
</Window>

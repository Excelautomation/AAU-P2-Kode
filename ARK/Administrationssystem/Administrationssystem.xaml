<Window xmlns:Administrationssystem="clr-namespace:ARK.Administrationssystem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:VM="clr-namespace:ARK.ViewModel"
        x:Class="ARK.Administrationssystem.Administrationssystem"
        Title="Administrationssystem" Height="768" Width="1024"
        MinWidth="1024" MinHeight="768" WindowState="Maximized">

    <Window.DataContext>
        <VM:AdministrationssystemViewModel />
    </Window.DataContext>

    <!--Skalerer checkboxes-->
    <Window.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="LayoutTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"></ScaleTransform>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="104" />
            <RowDefinition Height="6"/>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="202*" MinWidth="150" MaxWidth="280" />
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="809*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center" Height="102" Margin="0,2,0,0">
            <Image Source="/images/logo.gif" Stretch="Uniform" Height="90"/>
            <TextBlock Text="Aalborg Roklub" FontFamily="Arial" FontSize="19"
				HorizontalAlignment="Center" Foreground="#0a42f7" 
				VerticalAlignment="Bottom" Margin="0,-20,0,10"/>
        </StackPanel>

        <WrapPanel Grid.Column="2" VerticalAlignment="Center" Margin="10,25,202,25">
            <Button Width="115"  x:Name="btnMenuHome" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,30,0" Command="{Binding Path=MenuOversigt}">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="MenuHome_bg">
                            <Grid Margin="5">
                                <Image Height="32" x:Name="Img" Source="/images/house.png" HorizontalAlignment="Left" Margin="0,0,0,0"/>
                                <Label VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="18" Margin="0,0,0,0">Oversigt</Label>
                            </Grid>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MenuHome_bg" Property="Background" Value="#eff8fe"/>
                                <!--<Setter TargetName="Img" Property="Source" Value="/images/house.png"/>-->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button  Width="130" x:Name="btnMenuBlanketter" VerticalAlignment="Center" Margin="0,0,30,0" Command="{Binding Path=MenuBlanketter}">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="MenuBlanketter_bg">
                            <Grid Margin="5">
                                <Image Height="32" x:Name="Img" Source="/images/application_side_list.png" HorizontalAlignment="Left"/>
                                <Label VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="18" Margin="0,0,0,0">Blanketter</Label>
                            </Grid>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MenuBlanketter_bg" Property="Background"   Value="#eff8fe"/>
                                <!--<Setter TargetName="Img" Property="Source" Value="/images/application_side_list.png" />-->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            

            <Button x:Name="btnMenuIndstillinger" Width="145" HorizontalAlignment="Left" VerticalAlignment="Center" Command="{Binding Path=MenuIndstilinger}">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="MenuIndstillinger_bg">
                            <Grid  Margin="5">
                                <Image Height="32" HorizontalAlignment="Left" Source="/images/setting_tools.png"/>
                                <Label VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="18" Margin="0,0,0,0" >Indstillinger</Label>
                            </Grid>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MenuIndstillinger_bg" Property="Background" Value="#eff8fe"/>
                                <!--<Setter TargetName="Img" Property="Source" Value="/images/setting_tools.png" />
                                <Setter TargetName="btnMenuIndstillinger" Property="Background" Value="black"/>-->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            

            <!--<Button x:Name="btnMenuHome" HorizontalAlignment="Left" VerticalAlignment="Center" Width="82.462" Height="40" Command="{Binding Path=MenuOversigt}">

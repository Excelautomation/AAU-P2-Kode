<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ButtonStyle" TargetType="{x:Type FrameworkElement}">
        <Setter Property="TextBlock.Foreground" Value="White"/>
        <Setter Property="TextBlock.FontSize" Value="18"/>
        <Setter Property="TextBlock.FontWeight" Value="Bold"/>
        <Setter Property="TextBlock.FontFamily" Value="Calibri"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!--Button-->
    <Style x:Key="btnFilter" TargetType="Button">
        <Setter Property="Height" Value="64"/>
        <Setter Property="MaxHeight" Value="64"/>
        <Setter Property="Width" Value="150"/>
        <Setter Property="MaxWidth" Value="150"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Border x:Name="btnBorder" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Padding="{TemplateBinding Padding}"/>

                        <ContentPresenter x:Name="btnFilterContentPresenter"
                                          Style="{StaticResource ResourceKey=ButtonStyle}" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource PressedBG}" TargetName="btnBorder"/>
                            <Setter Property="BorderBrush" Value="{StaticResource PressedBorder}" TargetName="btnBorder"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!--
    Search and Filter
    Background & Border
    -->
    <LinearGradientBrush x:Key="SearchFilterBG" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FF818181" Offset="0"/>
        <GradientStop Color="#FF4D3D3D" Offset="0.5"/>
        <GradientStop Color="#FF4D4545" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="SearchFilterBorder" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FF6C6A6A" Offset="0"/>
        <GradientStop Color="#FF444040" Offset="0.5"/>
        <GradientStop Color="#FF515151" Offset="1"/>
    </LinearGradientBrush>

    <!--
    Begin (Green)
    Background & Border
    -->
    <LinearGradientBrush x:Key="BeginBG" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FF93C700" Offset="0"/>
        <GradientStop Color="#FF0E6E00" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="BeginBorder" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFB0D141" Offset="0"/>
        <GradientStop Color="#FF1B4E09" Offset="1"/>
    </LinearGradientBrush>

    <!--
    Trigger: IsPressed
    Background & Border
    -->
    <LinearGradientBrush x:Key="PressedBG" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="#444" Offset="0.0"/>
        <GradientStop Color="#888" Offset="1.0"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="PressedBorder" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="#BBB" Offset="0.0"/>
        <GradientStop Color="#EEE" Offset="0.1"/>
        <GradientStop Color="#EEE" Offset="0.9"/>
        <GradientStop Color="#FFF" Offset="1.0"/>
    </LinearGradientBrush>



    
    
    
    
    
    
    
    

<UserControl x:Class="ARK.Administrationssystem.Pages.Indstillinger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:VM="clr-namespace:ARK.ViewModel"
             xmlns:administrationssystem="clr-namespace:ARK.ViewModel.Administrationssystem"
             mc:Ignorable="d" 
             d:DesignHeight="605.97" d:DesignWidth="941.791">
    <UserControl.DataContext>
        <administrationssystem:SettingsViewModel/>
    </UserControl.DataContext>
    
    <UserControl.Resources>
        <Style x:Key="GreyWhNotSelected" TargetType="DockPanel">
            <Style.Resources>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedItem, ElementName=DamageTypeList}" Value="{x:Null}">
                            <Setter Property="IsEnabled" Value="False" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Style.Resources>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="White" Offset="0.118"/>
                <GradientStop Color="White" Offset="1"/>
                <GradientStop Color="#FFF9F7F7" Offset="0.056"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <WrapPanel Margin="5,0,0,0" Grid.Row="0">
                <Image Source="/View/images/setting_tools.png" Height="32"/>
                <Label FontSize="28" Margin="0">INDSTILLINGER</Label>
            </WrapPanel>
            <TabControl Margin="0,0,0,0" Background="Transparent" Grid.Row="1">

                
                <TabItem Header="SMS-Modul" FontSize="20" Margin="5,0,5,0" Padding="10,0,30,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" CornerRadius="15" Background="#EEEEEE" Padding="10" Margin="10">
                            <StackPanel>
                                <DockPanel>
                                    <TextBlock Margin="4" Background="Transparent">I dag forventes mørkets frembrud klokken:</TextBlock>
                                    <TextBox Name="TimeOfDarkTextBox" Margin="4" MaxLength="5" Text="20:23" Width="70" HorizontalContentAlignment="Center">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=TimeOfDarkCheckBox, Path=IsChecked}" Value="True">
                                                        <Setter Property="IsEnabled" Value="False"></Setter>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ElementName=TimeOfDarkCheckBox, Path=IsChecked}" Value="False">
                                                        <Setter Property="IsEnabled" Value="True"></Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                    <WrapPanel HorizontalAlignment="Right">
                                        <TextBlock Margin="4">Håndtér automatisk</TextBlock>
                                        <CheckBox Name="TimeOfDarkCheckBox" IsChecked="True" Margin="4" VerticalAlignment="Center">
                                        </CheckBox>
                                    </WrapPanel>
                                </DockPanel>
                                <DockPanel>
                                    <TextBlock Margin="4">Besked ved mørkets frembrud til udrejste både skal forsinkes med:</TextBlock>
                                    <ComboBox Margin="4" SelectedIndex="0" Width="90" HorizontalAlignment="Right">5 min</ComboBox>
                                </DockPanel>
                                <DockPanel>
                                    <TextBlock Margin="4">En båds reaktion på en besked ved mørkets frembrud skal ske indenfor:</TextBlock>
                                    <ComboBox Margin="4" SelectedIndex="0" Width="90" HorizontalAlignment="Right">15 min</ComboBox>
                                </DockPanel>
                            </StackPanel>
                        </Border>
                        <Border Grid.Row="1" CornerRadius="15" Background="#EEEEEE" Padding="10" Margin="10" Width="700">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="4"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200*"/>
                                    <ColumnDefinition Width="4"/>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="4"/>
                                    <ColumnDefinition Width="200*"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center">Aktive kontaktpersoner</Label>
                                <Label Grid.Row="0" Grid.Column="4" HorizontalAlignment="Center">Ikke-aktive kontakpersoner</Label>
                                <StackPanel VerticalAlignment="Center" Grid.Row="2" Grid.Column="2">
                                    <Button Margin="4" Width="32">
                                        <Image Source="/View/images/arrow_left.png"></Image>
                                    </Button>
                                    <Button Margin="4" Width="32">
                                        <Image Source="/View/images/arrow_right.png"></Image>
                                    </Button>
                                </StackPanel>
                                <ListView Name="KontaktPersonerListeVenstre" Grid.Row="2" Grid.Column="0" Margin="4" ScrollViewer.VerticalScrollBarVisibility="Visible"></ListView>
                                <ListView Name="KontaktPersonerListeHøjre" Grid.Row="2" Grid.Column="4" Margin="4" ScrollViewer.VerticalScrollBarVisibility="Visible"></ListView>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>
                
                
                <TabItem Header="Skadetyper" FontSize="20" Margin="0,0,5,0" Padding="10,0,30,0">
                    <DockPanel HorizontalAlignment="Center" Margin="10">
                        <Grid>
                        
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="320"/>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                        
                            <DockPanel Grid.Column="0" Margin="4">
                                <Button Padding="5" Command="{Binding Path=CreateSkadeType}" Margin="4" DockPanel.Dock="Top" Width="200" Content="Opret ny skadetype"/>
                                <ListView VerticalAlignment="Stretch" x:Name="DamageTypeList" SelectionMode="Single" Margin="4" DockPanel.Dock="Bottom"
                                          ItemsSource="{Binding Path=DamageTypes}" SelectedIndex="{Binding Path=SelectedListItemDamageTypes}" SelectedItem="{Binding Path=CurrentDamageType}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="0,2,0,2">
                                                <Label Content="{Binding Path=Title}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="SelectionChanged">
                                            <i:InvokeCommandAction Command="{Binding Path=SelectedChangeDamageType}" CommandParameter="{Binding ElementName=DamageTypeList, Path=SelectedItem}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </ListView>
                            </DockPanel>

                            <StackPanel Grid.Column="2" Margin="4">
                                <Label FontStyle="Italic" HorizontalAlignment="Center" Margin="4" Content="Detaljer om valgte skadetype"/>
                                <Border Margin="4" CornerRadius="15" Background="#EEEEEE" Padding="15" HorizontalAlignment="Left">
                                    <StackPanel Width="auto">
                                        <WrapPanel>
                                            <Label Width="150" Margin="4" Content="Skadenavn:"/>
                                            <TextBox Width="320" Margin="4" Text="{Binding Path=CurrentDamageType.Title}"/>
                                        </WrapPanel>
                                        <WrapPanel>
                                            <Label Width="150" Margin="4" Content="Alvorlighed:"/>
                                            <WrapPanel Width="320" Margin="4">
                                                <Label Content="Er båden funktionsdygtig?"/>
                                                <CheckBox IsChecked="{Binding Path=CurrentDamageType.IsFunctional}" VerticalAlignment="Center"/>
                                            </WrapPanel>
                                        </WrapPanel>
                                        <WrapPanel>
                                            <Label Width="150" Margin="4" Content="Beskrivelse:"/>
                                            <TextBox Width="320" Margin="4" Text="{Binding Path=CurrentDamageType.Description}" VerticalScrollBarVisibility="Auto" MinLines="4" MaxLines="4" TextWrapping="Wrap" AcceptsReturn="True"/>
                                        </WrapPanel>

                                        <DockPanel Style="{StaticResource GreyWhNotSelected}">
                                            <Button Padding="5" Background="#CCFFCC" Margin="4" Content="Gem" Command="{Binding Path=SaveChangesSkadeTyper}"/>
                                            <Button Padding="5" Background="#FFDEDE" Margin="4" Content="Annulér" Command="{Binding Path=CancelChangesSkadeTyper}"/>
                                            <Button Padding="5" Background="#FF0000" Foreground="#FFFFFF" Margin="4" Content="Slet skadetype" Command="{Binding Path=DeleteSkadeType}" HorizontalAlignment="Right"/>
                                        </DockPanel>
                                    </StackPanel>
                                </Border>
                            
                                <WrapPanel Margin="4">
                                    <Image Height="32" Margin="0,0,10,0">
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Path=FeedbackDamageType, UpdateSourceTrigger=PropertyChanged}" Value="Default">
                                                        <Setter Property="Visibility" Value="Hidden"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=FeedbackDamageType, UpdateSourceTrigger=PropertyChanged}" Value="Save">
                                                        <Setter Property="Source" Value="/View/images/accept.png"/>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=FeedbackDamageType, UpdateSourceTrigger=PropertyChanged}" Value="Cancel">
                                                        <Setter Property="Source" Value="/View/images/cancel.png"/>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=FeedbackDamageType, UpdateSourceTrigger=PropertyChanged}" Value="Create">
                                                        <Setter Property="Source" Value="/View/images/add.png"/>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=FeedbackDamageType, UpdateSourceTrigger=PropertyChanged}" Value="Delete">
                                                        <Setter Property="Source" Value="/View/images/delete.png"/>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>
                                    <TextBlock VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Path=FeedbackDamageType, UpdateSourceTrigger=PropertyChanged}" Value="Default">
                                                        <Setter Property="Visibility" Value="Hidden"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=FeedbackDamageType, UpdateSourceTrigger=PropertyChanged}" Value="Save">
                                                        <Setter Property="Foreground" Value="Green"/>
                                                        <Setter Property="Text" Value="Ændringer gemt"/>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=FeedbackDamageType, UpdateSourceTrigger=PropertyChanged}" Value="Cancel">
                                                        <Setter Property="Foreground" Value="Red"/>
                                                        <Setter Property="Text" Value="Ændringer annulleret"/>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=FeedbackDamageType, UpdateSourceTrigger=PropertyChanged}" Value="Create">
                                                        <Setter Property="Foreground" Value="Green"/>
                                                        <Setter Property="Text" Value="Skadetype oprettet"/>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=FeedbackDamageType, UpdateSourceTrigger=PropertyChanged}" Value="Delete">
                                                        <Setter Property="Foreground" Value="Red"/>
                                                        <Setter Property="Text" Value="Skadetype slettet"/>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </WrapPanel>
                            
                            </StackPanel>
                        
                        </Grid>
                    </DockPanel>
                </TabItem>
                
                
                <TabItem Header="Standardture" FontSize="20" Margin="5,0,5,0" Padding="10,0,30,0">
                    <Grid>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100*"/>
                            <ColumnDefinition Width="4"/>
                            <ColumnDefinition Width="200*"/>
                        </Grid.ColumnDefinitions>
                        
                        <DockPanel Grid.Column="0">
                            <Button Command="{Binding Path=CreateStandardTrip}" Margin="4" DockPanel.Dock="Top" Width="220" Content="Opret ny standardtur"/>
                            <ListView x:Name="StandardTripList" SelectionMode="Single" Margin="4" DockPanel.Dock="Bottom" ScrollViewer.VerticalScrollBarVisibility="Visible" ItemsSource="{Binding Path=StandardTrips}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,2,0,2">
                                            <Label Content="{Binding Path=Title}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="SelectionChanged">
                                        <i:InvokeCommandAction Command="{Binding Path=SelectedChangeStandardTrip}" CommandParameter="{Binding ElementName=StandardTripList, Path=SelectedItem}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </ListView>
                        </DockPanel>
                        
                        <StackPanel Grid.Row="2" Grid.Column="2">
                            <Label Margin="4">Detaljer</Label>
                            <Border CornerRadius="15" Background="#EEEEEE" Padding="10" Margin="10" Width="auto" HorizontalAlignment="Left">
                                <StackPanel>
                                    <StackPanel>
                                        
                                        <WrapPanel Margin="4">
                                            <StackPanel Margin="4">
                                                <Label>Turnavn:</Label>
                                                <Label>Distance:</Label>
                                                <Label>Beskrivelse:</Label>
                                            </StackPanel>
                                            <StackPanel Margin="4" Width="320">
                                                <TextBox Margin="4" Text="{Binding Path=CurrentStandardTrip.Title}"/>
                                                <TextBox Margin="4" Text="{Binding Path=CurrentStandardTrip.Distance}"/>
                                                <TextBox Margin="4" Text="{Binding Path=CurrentStandardTrip.Title}" VerticalScrollBarVisibility="Auto" MinLines="4" MaxLines="4" TextWrapping="Wrap" AcceptsReturn="True"/>
                                            </StackPanel>
                                        </WrapPanel>
                                        
                                    </StackPanel>
                                    <DockPanel Margin="10" >
                                        <Button Margin="4" Content="Gem" Command="{Binding Path=SaveChangesStandardTrips}"/>
                                        <Button Margin="4" Content="Annulér" Command="{Binding Path=CancelChangesStandardTrips}"/>
                                        <Button Margin="4" Content="Slet" Command="{Binding Path=DeleteStandarTrip}" HorizontalAlignment="Right"/>
                                    </DockPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        
                    </Grid>
                </TabItem>
                
                
                <TabItem Header="Administratorer" FontSize="20" Margin="5,0,5,0" Padding="10,0,30,0">
                    <Grid>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100*"/>
                            <ColumnDefinition Width="4"/>
                            <ColumnDefinition Width="200*"/>
                        </Grid.ColumnDefinitions>
                        
                        <DockPanel Grid.Column="0">
                            <Button Command="{Binding Path=CreateAdmin}" Margin="4" Width="230" DockPanel.Dock="Top" Content="Opret ny administrator"/>
                            <ListView x:Name="AdminList" SelectionMode="Single" Margin="4" DockPanel.Dock="Bottom" ItemsSource="{Binding Path=Admins, UpdateSourceTrigger=PropertyChanged}" IsSynchronizedWithCurrentItem="True" SelectedIndex="{Binding Path=CurrentAdminInt}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,2,0,2">
                                            <WrapPanel>
                                                <Label Content="{Binding Path=Member.FirstName}"/>
                                                <Label Content="{Binding Path=Member.LastName}"/>
                                            </WrapPanel>
                                            <Label Content="{Binding Path=Username}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="SelectionChanged">
                                        <i:InvokeCommandAction Command="{Binding Path=SelectedChangeAdmin}" CommandParameter="{Binding ElementName=AdminList, Path=SelectedItem}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </ListView>
                        </DockPanel>
                        
                        <StackPanel Grid.Column="2">
                            <Label Margin="4">Detaljer</Label>
                            <Border HorizontalAlignment="Left" CornerRadius="15" Background="#EEEEEE" Padding="10" Margin="10" Width="auto">
                                <StackPanel>
                                    <StackPanel>
                                        
                                        <Button Command="{Binding ShowMembers}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Content" Value="Tildel medlem"/>
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding NewAdminBool}" Value="true">
                                                            <Setter Property="Visibility"  Value="Visible"/>

                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        
                                        <WrapPanel Margin="4">
                                            <StackPanel Margin="4">
                                                <Label>Brugernavn:</Label>
                                                <Label>Kodeord:</Label>
                                                <Label>Medlemsnr.:</Label>
                                                <Label>Fornavn:</Label>
                                                <Label>Efternavn:</Label>
                                                <Label>E-mail:</Label>
                                                <Label>Telefon:</Label>
                                            </StackPanel>
                                            
                                            <StackPanel Margin="4" VerticalAlignment="Center" Width="250">
                                                <TextBox Margin="4" Text="{Binding Path=CurrentAdmin.Username, UpdateSourceTrigger=PropertyChanged}"/>
                                                <Button Content="Skift kodeord"/>
                                                <TextBlock Margin="4" Text="{Binding Path=CurrentAdmin.Member.Id}"/>
                                                <TextBlock Margin="4" Text="{Binding Path=CurrentAdmin.Member.FirstName}"/>
                                                <TextBlock Margin="4" Text="{Binding Path=CurrentAdmin.Member.LastName}"/>
                                                <TextBlock Margin="4" Text="{Binding Path=CurrentAdmin.Member.Email1}"/>
                                                <TextBlock Margin="4" Text="{Binding Path=CurrentAdmin.Member.Phone}"/>
                                            </StackPanel>
                                        </WrapPanel>
                                    </StackPanel>
                                    
                                    <DockPanel Margin="10">
                                        <Button Margin="4" Content="Gem" Command="{Binding Path=SaveChangesAdmins}"/>
                                        <Button Margin="4" Content="Annulér" Command="{Binding Path=CancelChangesAdmins}"/>
                                        <Button Margin="4" Content="Slet" Command="{Binding Path=DeleteAdmin}" HorizontalAlignment="Right"/>
                                    </DockPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        
                    </Grid>
                </TabItem>
                
                
            </TabControl>
        </Grid>
    </Grid>
</UserControl>

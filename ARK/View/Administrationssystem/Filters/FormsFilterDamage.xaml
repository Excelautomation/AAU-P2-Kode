<UserControl x:Class="ARK.View.Administrationssystem.Filters.FormsFilterDamage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:VMFilter="clr-namespace:ARK.ViewModel.Administrationssystem.Filters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <VMFilter:FormsFilterViewModel></VMFilter:FormsFilterViewModel>
    </UserControl.DataContext>

    <StackPanel>
        <Label FontSize="18">Filter</Label>
        <Rectangle Margin="5,-10,5,0" Height="1" Fill="Gray"/>
        
        <CheckBox Content="Åbne" IsChecked="{Binding Path=ShowOpen, Mode=TwoWay}"></CheckBox>
        <CheckBox Content="Lukkede" IsChecked="{Binding Path=ShowDenied, Mode=TwoWay}"></CheckBox>
    </StackPanel>
</UserControl>

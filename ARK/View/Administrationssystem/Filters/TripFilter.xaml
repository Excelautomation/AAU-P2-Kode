<UserControl x:Class="ARK.View.Administrationssystem.Filters.TripFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:filters="clr-namespace:ARK.ViewModel.Administrationssystem.Filters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <filters:TripFilterViewModel />
    </UserControl.DataContext>

    <StackPanel>
        <Label FontSize="18">Bådtype</Label>
        <Rectangle Margin="5,-10,5,0" Height="1" Fill="Gray"/>
        <ItemsControl ItemsSource="{Binding Path=ControlsBoatType}"></ItemsControl>

        <Label FontSize="18">Distance</Label>
        <Rectangle Margin="5,-10,5,0" Height="1" Fill="Gray"/>
        <ItemsControl ItemsSource="{Binding Path=ControlsDistance}"></ItemsControl>

        <Label FontSize="18">År</Label>
        <Rectangle Margin="5,-10,5,0" Height="1" Fill="Gray"/>
        <ItemsControl ItemsSource="{Binding Path=ControlsYear}"></ItemsControl>
    </StackPanel>
</UserControl>

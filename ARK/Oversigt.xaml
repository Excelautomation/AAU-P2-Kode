<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ARK="clr-namespace:ARK" x:Class="Administrationssystem.Oversigt" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel LastChildFill="False">
        <GroupBox Header="Både på vandet" DockPanel.Dock="Top" Margin="10">
            <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                <WrapPanel>
                    <ARK:BådItem VerticalAlignment="Top" HorizontalAlignment="Left"/>
                </WrapPanel>
            </ScrollViewer>
        </GroupBox>
        <GroupBox Header="Skadede både" DockPanel.Dock="Top" Margin="10">
            <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                <WrapPanel>
                    <ARK:BådItem VerticalAlignment="Top" HorizontalAlignment="Left"/>
                </WrapPanel>
            </ScrollViewer>
        </GroupBox>
    </DockPanel>
</UserControl>

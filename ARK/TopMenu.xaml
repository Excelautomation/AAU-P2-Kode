<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ARK="clr-namespace:ARK" x:Class="Administrationssystem.TopMenu" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="1024">
    <DockPanel LastChildFill="False">
        <WrapPanel Margin="10,5,10,0" DockPanel.Dock="Left">
            <Button Content="Oversigt" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="40" Margin="0,0,0,0"/>
            <Button Content="Blanketter" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="40" Margin="10,0,0,0"/>
            <Button Content="Indstillinger" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="40" Margin="10,0,0,0"/>

            <TextBox HorizontalAlignment="Stretch" Text="TextBox" Width="120" VerticalAlignment="Top" TextWrapping="WrapWithOverflow" Margin="60,8,0,0"/>
            <Button Content="Søg" HorizontalAlignment="Right" VerticalAlignment="Top" Width="30" Margin="0,8,0,0"/>
        </WrapPanel>

        <ARK:BrugerKontrol Height="100" VerticalAlignment="Top" DockPanel.Dock="Right"/>

    </DockPanel>
</UserControl>
